{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["ES2020", "ES2020.Promise", "ES2020.String", "ES2020.BigInt", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
